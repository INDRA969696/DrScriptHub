local IndraLib = {}

function IndraLib:CreateNotify(title, text, duration)
    local sgui = game:GetService("CoreGui"):FindFirstChild("IndraHub") or game:GetService("Players").LocalPlayer:WaitForChild("PlayerGui"):FindFirstChild("IndraHub")
    if not sgui then return end

    local MainNotify = Instance.new("Frame")
    MainNotify.Name = "Dralibs_Notify"
    MainNotify.Size = UDim2.new(0, 220, 0, 70)
    MainNotify.Position = UDim2.new(1.2, 0, 0.8, 0)
    MainNotify.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
    MainNotify.BorderSizePixel = 0
    MainNotify.Parent = sgui
    
    Instance.new("UICorner", MainNotify).CornerRadius = UDim.new(0, 8)

    local TitleLabel = Instance.new("TextLabel")
    TitleLabel.Size = UDim2.new(1, -10, 0, 25)
    TitleLabel.Position = UDim2.new(0, 5, 0, 5)
    TitleLabel.BackgroundTransparency = 1
    TitleLabel.Text = tostring(title)
    TitleLabel.TextColor3 = Color3.fromRGB(255, 255, 255)
    TitleLabel.TextSize = 14
    TitleLabel.Font = Enum.Font.SourceSansBold
    TitleLabel.TextXAlignment = Enum.HorizontalAlignment.Left
    TitleLabel.Parent = MainNotify

    local ContentLabel = Instance.new("TextLabel")
    ContentLabel.Size = UDim2.new(1, -10, 1, -30)
    ContentLabel.Position = UDim2.new(0, 5, 0, 30)
    ContentLabel.BackgroundTransparency = 1
    ContentLabel.Text = tostring(text)
    ContentLabel.TextColor3 = Color3.fromRGB(200, 200, 200)
    ContentLabel.TextSize = 12
    ContentLabel.TextWrapped = true
    ContentLabel.TextXAlignment = Enum.HorizontalAlignment.Left
    ContentLabel.TextYAlignment = Enum.VerticalAlignment.Top
    ContentLabel.Parent = MainNotify

    MainNotify:TweenPosition(UDim2.new(1, -230, 0.8, 0), "Out", "Quint", 0.5, true)

    task.spawn(function()
        task.wait(duration or 3)
        MainNotify:TweenPosition(UDim2.new(1.2, 0, 0.8, 0), "In", "Quint", 0.5, true)
        task.wait(0.5)
        MainNotify:Destroy()
    end)
end

function IndraLib:window(HubName)
    local player = game.Players.LocalPlayer
    local pgui = player:WaitForChild("PlayerGui")
    if pgui:FindFirstChild("IndraHub") then pgui.IndraHub:Destroy() end

    local ScreenGui = Instance.new("ScreenGui")
    ScreenGui.Name = "IndraHub"
    ScreenGui.Parent = pgui
    ScreenGui.ResetOnSpawn = false

    local OpenBtn = Instance.new("ImageButton")
    OpenBtn.Name = "IndraLogoBtn"
    OpenBtn.Size = UDim2.new(0, 40, 0, 40)
    OpenBtn.Position = UDim2.new(0, 10, 0.6, 0)
    OpenBtn.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
    OpenBtn.Image = "rbxassetid://83893542839026"
    OpenBtn.Parent = ScreenGui
    OpenBtn.ZIndex = 500
    Instance.new("UICorner", OpenBtn).CornerRadius = UDim.new(1, 0)

    local dragging, dragStart, startPos
    OpenBtn.InputBegan:Connect(function(input)
        if input.UserInputType == Enum.UserInputType.MouseButton1 or input.UserInputType == Enum.UserInputType.Touch then
            dragging = true
            dragStart = input.Position
            startPos = OpenBtn.Position
        end
    end)
    game:GetService("UserInputService").InputChanged:Connect(function(input)
        if dragging and (input.UserInputType == Enum.UserInputType.MouseMovement or input.UserInputType == Enum.UserInputType.Touch) then
            local delta = input.Position - dragStart
            OpenBtn.Position = UDim2.new(startPos.X.Scale, startPos.X.Offset + delta.X, startPos.Y.Scale, startPos.Y.Offset + delta.Y)
        end
    end)
    game:GetService("UserInputService").InputEnded:Connect(function(input)
        if input.UserInputType == Enum.UserInputType.MouseButton1 or input.UserInputType == Enum.UserInputType.Touch then
            dragging = false
        end
    end)

        -- [ MAIN FRAME MODERN MODE ] --
    local MainFrame = Instance.new("Frame")
    MainFrame.Size = UDim2.new(0, 220, 0, 250)
    MainFrame.Position = UDim2.new(0.5, -110, 0.5, -125)
    MainFrame.BackgroundColor3 = Color3.fromRGB(20, 20, 20)
    MainFrame.BackgroundTransparency = 0
    MainFrame.BorderSizePixel = 0
    MainFrame.Parent = ScreenGui
    MainFrame.ClipsDescendants = true

    local FrameStroke = Instance.new("UIStroke")
    FrameStroke.Thickness = 1.3
    FrameStroke.Color = Color3.fromRGB(255, 255, 255)
    FrameStroke.ApplyStrokeMode = Enum.ApplyStrokeMode.Border
    FrameStroke.Parent = MainFrame

    local MainCorner = Instance.new("UICorner")
    MainCorner.CornerRadius = UDim.new(0, 10)
    MainCorner.Parent = MainFrame

    local Title = Instance.new("TextLabel")
    Title.Size = UDim2.new(1, 0, 0, 35)
    Title.BackgroundTransparency = 1 -- Transparan total
    Title.Text = HubName
    Title.TextColor3 = Color3.fromRGB(255, 255, 255)
    Title.TextSize = 16
    Title.Font = Enum.Font.SourceSansBold
    Title.Parent = MainFrame

    local Underline = Instance.new("Frame")
    Underline.Size = UDim2.new(1, -20, 0, 1) 
    Underline.Position = UDim2.new(0.5, 0, 1, 0)
    Underline.AnchorPoint = Vector2.new(0.5, 0)
    Underline.BackgroundColor3 = Color3.fromRGB(255, 255, 255)
    Underline.BorderSizePixel = 0
    Underline.Parent = Title

    local Container = Instance.new("ScrollingFrame")
    Container.Size = UDim2.new(1, 0, 1, -50) 
    Container.Position = UDim2.new(0, 0, 0, 35)
    Container.BackgroundTransparency = 1
    Container.CanvasSize = UDim2.new(0, 0, 0, 0)
    Container.ScrollBarThickness = 2
    Container.ClipsDescendants = true
    Container.Parent = MainFrame

    local Credit = Instance.new("TextLabel")
    Credit.Size = UDim2.new(1, -10, 0, 15)
    Credit.Position = UDim2.new(0, 0, 1, -18)
    Credit.BackgroundTransparency = 1
    Credit.Text = "MakeWithDraLibs"
    Credit.TextColor3 = Color3.fromRGB(100, 100, 100)
    Credit.TextSize = 10
    Credit.TextXAlignment = Enum.TextXAlignment.Right
    Credit.Parent = MainFrame

    local UIList = Instance.new("UIListLayout")
    UIList.Parent = Container
    UIList.Padding = UDim.new(0, 5)
    UIList.HorizontalAlignment = Enum.HorizontalAlignment.Center

    UIList:GetPropertyChangedSignal("AbsoluteContentSize"):Connect(function()
        Container.CanvasSize = UDim2.new(0, 0, 0, UIList.AbsoluteContentSize.Y + 10)
    end)

    OpenBtn.MouseButton1Click:Connect(function()
        MainFrame.Visible = not MainFrame.Visible
    end)

    local InnerLib = {}

    function InnerLib:button(Text, Callback)
        local Btn = Instance.new("TextButton")
        Btn.Size = UDim2.new(0, 200, 0, 40)
        Btn.BackgroundColor3 = Color3.fromRGB(50, 50, 50)
        Btn.Text = Text
        Btn.TextColor3 = Color3.fromRGB(255, 255, 255)
        Btn.Parent = Container
        Instance.new("UICorner", Btn).CornerRadius = UDim.new(0, 6)
        Btn.MouseButton1Click:Connect(Callback)
    end

    function InnerLib:sbutton(Text, Callback)
        local Btn = Instance.new("TextButton")
        Btn.Size = UDim2.new(0, 200, 0, 30)
        Btn.BackgroundColor3 = Color3.fromRGB(50, 50, 50)
        Btn.Text = Text
        Btn.TextColor3 = Color3.fromRGB(255, 255, 255)
        Btn.Parent = Container
        Instance.new("UICorner", Btn).CornerRadius = UDim.new(0, 6)
        Btn.MouseButton1Click:Connect(Callback)
    end

    function InnerLib:toggle(Text, Callback)
        local Tgl = Instance.new("TextButton")
        Tgl.Size = UDim2.new(0, 200, 0, 40)
        Tgl.BackgroundColor3 = Color3.fromRGB(150, 0, 0)
        Tgl.Text = Text .. " : OFF"
        Tgl.TextColor3 = Color3.fromRGB(255, 255, 255)
        Tgl.Parent = Container
        Instance.new("UICorner", Tgl).CornerRadius = UDim.new(0, 6)
        local State = false
        Tgl.MouseButton1Click:Connect(function()
            State = not State
            Tgl.BackgroundColor3 = State and Color3.fromRGB(0, 150, 0) or Color3.fromRGB(150, 0, 0)
            Tgl.Text = Text .. (State and " : ON" or " : OFF")
            Callback(State)
        end)
    end

    function InnerLib:textbox(Placeholder, Callback)
        local TextContainer = Instance.new("Frame")
        TextContainer.Size = UDim2.new(0, 200, 0, 40)
        TextContainer.BackgroundColor3 = Color3.fromRGB(200, 200, 200)
        TextContainer.BorderSizePixel = 0
        TextContainer.Parent = Container
        Instance.new("UICorner", TextContainer).CornerRadius = UDim.new(0, 6)

        local TBox = Instance.new("TextBox")
        TBox.Size = UDim2.new(1, -20, 1, 0)
        TBox.Position = UDim2.new(0, 10, 0, 0)
        TBox.BackgroundTransparency = 1
        TBox.Text = ""
        TBox.PlaceholderText = Placeholder or "Input..."
        TBox.TextColor3 = Color3.fromRGB(255, 255, 255)
        TBox.Parent = TextContainer
        TBox.FocusLost:Connect(function() Callback(TBox.Text) end)
    end

    function InnerLib:dropdown(Text, List, Callback)
        local DropdownBtn = Instance.new("TextButton")
        DropdownBtn.Size = UDim2.new(0, 200, 0, 40)
        DropdownBtn.BackgroundColor3 = Color3.fromRGB(45, 45, 45)
        DropdownBtn.Text = Text .. " >"
        DropdownBtn.TextColor3 = Color3.fromRGB(255, 255, 255)
        DropdownBtn.Parent = Container
        Instance.new("UICorner", DropdownBtn).CornerRadius = UDim.new(0, 6)

        local SidePanel = Instance.new("Frame")
        SidePanel.Size = UDim2.new(0, 140, 0, 0) -- Mulai dari tinggi 0 biar bisa dianimasiin
        SidePanel.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
        SidePanel.Visible = false
        SidePanel.ClipsDescendants = true
        SidePanel.Parent = ScreenGui -- DIPINDAH KE SCREEN GUI BIAR GAK KEPOTONG
        Instance.new("UICorner", SidePanel).CornerRadius = UDim.new(0, 6)

        local SideLayout = Instance.new("UIListLayout")
        SideLayout.Parent = SidePanel
        
        DropdownBtn.MouseButton1Click:Connect(function()
            SidePanel.Visible = not SidePanel.Visible
            if SidePanel.Visible then
                -- UPDATE POSISI REALTIME (Nempel di samping tombol)
                SidePanel.Position = UDim2.new(0, DropdownBtn.AbsolutePosition.X + 205, 0, DropdownBtn.AbsolutePosition.Y)
                SidePanel.Size = UDim2.new(0, 140, 0, #List * 30)
            end
        end)

        for _, v in pairs(List) do
            local Opt = Instance.new("TextButton")
            Opt.Size = UDim2.new(1, 0, 0, 30)
            Opt.BackgroundColor3 = Color3.fromRGB(40, 40, 40)
            Opt.Text = tostring(v)
            Opt.TextColor3 = Color3.fromRGB(230, 230, 230)
            Opt.Parent = SidePanel
            Opt.MouseButton1Click:Connect(function()
                DropdownBtn.Text = tostring(v) .. " >"
                Callback(v)
                SidePanel.Visible = false
            end)
        end
    end

    return InnerLib
end

return IndraLib

